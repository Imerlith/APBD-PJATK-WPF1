<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="Zadanie 1" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button x:Name="RedButton" Content="Zadanie2" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2
                " Background="Red" Click="RedButton_Click" />
        <Button Content="Okno2" Grid.Column="2" Grid.Row="2" Grid.RowSpan="3" Background="Blue"/>
        <Button x:Name="YellowButton" Content="Okno3" Grid.Column="2" Grid.Row="0"  Background="Yellow" Click="YellowButton_Click"/>
        <Button Content="Okno4" Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" Background="Black"/>
    </Grid>
</Window>
